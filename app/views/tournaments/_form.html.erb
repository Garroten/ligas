    <%= f.label :ispairs %><br>
    <%= f.check_box :ispairs %>
  </div>
  <div class="field">
    <%= f.label :players_number %><br>
    <%= f.number_field :players_number %>
  </div>
  <div class="field">
    <%= f.label :signup_limit_date %><br>
    <%= f.date_select :signup_limit_date %>
  </div>
  <div class="field">
    <%= f.label :start_date %><br>
    <%= f.date_select :start_date %>
  </div>
  <div class="field">
    <%= f.label :end_date %><br>
    <%= f.date_select :end_date %>
  </div>
  <div class="field">
    <%= label_tag 'Candidatos' %><br />
    <%= f.text_area :candidatos %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
